<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".service.Login">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="231dp"
            android:layout_height="111dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="90dp"
            android:src="@drawable/img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="272dp"
            android:layout_height="59dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="81dp"
            android:layout_marginEnd="70dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" />

        <EditText
            android:id="@+id/editTextTextPassword2"
            android:layout_width="272dp"
            android:layout_height="53dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="70dp"
            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />

        <Button
            android:id="@+id/buttonAcessar"
            android:layout_width="208dp"
            android:layout_height="61dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="110dp"
            android:text="Acessar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textEsqueciMinhaSenha" />

        <TextView
            android:id="@+id/textEsqueciMinhaSenha"
            android:layout_width="195dp"
            android:layout_height="27dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="110dp"
            android:text="Esqueci minha senha"
            android:textAlignment="center"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword2" />

        <TextView
            android:id="@+id/textCriarConta"
            android:layout_width="338dp"
            android:layout_height="40dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="119dp"
            android:layout_marginEnd="31dp"
            android:text="NÃ£o tenho uma conta?  Toque aqui para criar uma agora."
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonAcessar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>